import operator
from operator import itemgetter
import csv



if __name__ == '__main__':
    class_count=dict()
    fhand=open('./data/DTSC_classification_chembook.csv')
    for line in fhand:
        line=line.rstrip()
        line=line.split(',')
        #strip CAS number:
        if line[1]is '':
            class_count['No class']=class_count.get('No class',0)+1
            continue
            
        
        else: 
            for name in line[1:]:
                if name is not '':
                    '''deal with dict here'''
    
                    class_count[name]=class_count.get(name,0)+1
        
    sorted_count=sorted(class_count.items(),key=itemgetter(1))
    
    output=open('./outputs/chem_app_count_DTSC.csv')
    filewriter=output. 
    for chem_class,count in sorted_count:
        print chem_class,count
        
    
    
    
    